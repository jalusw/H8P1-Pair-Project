<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/meta.ejs") %>
    <title><%= "Oops" %></title>
  </head>

  <body>
    <div class="container mt-5">
      <h1><%= message %></h1>
      <p class="fw-bold h1"><%= error.status %></p>
      <% if(mode == "development") { %>
        <pre class="text-danger mt-5"><%= error.stack %></pre>
      <% } %>
      <%- include("./partials/scripts.ejs") %>

    </div>
  </body>
</html>
